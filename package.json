{
  "name": "imandrax-lsp",
  "description": "Server for ImandraX",
  "author": "Imandra Inc",
  "license": "MIT",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/imandra-ai/imandrax-vscode"
  },
  "categories": [],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onCommand:imandrax.restart_lsp_server"
  ],
  "main": "./out/main",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "ImandraX configuration",
      "properties": {
        "imandrax.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "imandrax.lsp.binary": {
          "scope": "window",
          "type": "string",
          "default": "imandrax-lsp",
          "description": "Path to the ImandraX LSP server binary"
        },
        "imandrax.lsp.arguments": {
          "scope": "window",
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "--check-on-save=true"
          ],
          "description": "Additional commandline arguments for the ImandraX language server"
        },
        "imandrax.lsp.environment": {
          "scope": "window",
          "type": "object",
          "default": {},
          "description": "Additional environment variables for the ImandraX language server"
        }
      }
    },
    "grammars": [
      {
        "language": "imandrax",
        "scopeName": "source.imandrax",
        "path": "./syntaxes/imandrax.json"
      }
    ],
    "languages": [
      {
        "id": "imandrax",
        "aliases": [
          "ImandraX"
        ],
        "extensions": [
          ".iml"
        ],
        "configuration": "./languages/imandrax.json"
      }
    ],
    "commands": [
      {
        "command": "imandrax.restart_language_server",
        "title": "ImandraX: Restart language server"
      },
      {
        "command": "imandrax.check_all",
        "title": "ImandraX: Check all proof obligations in current file"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./src --ext .ts,.tsx",
    "postinstall": "cd src && npm install && cd ..",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.18.34",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "esbuild": "^0.19.5",
    "eslint": "^8.35.0",
    "mocha": "^9.2.1",
    "typescript": "^5.2.2",
    "vsce": "^2.15.0"
  }
}